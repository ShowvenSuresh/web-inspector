{
  "manifest_version": 3,
  "name": "Web-Inspector",
  "version": "1.0.0",
  "description": "A chrome extension to inspect http traffic",
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "./pages/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "background/blocked.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "storage",
    "webNavigation",
    "activeTab",
    "tabs",
    "history",
    "scripting",
    "webRequest",
    "notifications",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}

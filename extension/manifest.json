{
  "manifest_version": 3,
  "name": "Web-Inspector",
  "version": "1.0.0",
  "description": "A chrome extension to inspect http traffic",
  "background": {
    "service_worker": "./background/background.js"
  },
  "action": {
    "default_popup": "./pages/dashboard.html"
  },
  "permissions": [
    "storge",
    "tabs",
    "scripting",
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
